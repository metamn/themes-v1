{
  "breakpoints": [
    {
      "name": "mobile",
      "value": "600px",
      "description": "Screens smaller than 600px"
    },
    {
      "name": "tablet",
      "value": "1024px",
      "description": "Screens bigger than 600px and smaller than 1024px"
    },
    {
      "name": "desktop",
      "value": "1600px",
      "description": "Screens larger than 1600px"
    }
  ],
  "responsive_mixins": [
    {
      "name": "portrait",
      "media_query": "(orientation: portrait)"
    },
    {
      "name": "landscape",
      "media_query": "(orientation: landscape)"
    },
    {
      "name": "mobile",
      "media_query": "(max-width: $breakpoint-mobile - 0.1)"
    },
    {
      "name": "tablet",
      "media_query": "(min-width: $breakpoint-mobile) and (max-width: $breakpoint-tablet - 0.1)"
    },
    {
      "name": "tablet-landscape",
      "media_query": "(min-width: $breakpoint-mobile) and (max-width: $breakpoint-tablet) and (orientation: landscape)"
    },
    {
      "name": "laptop",
      "media_query": "(min-width: $breakpoint-tablet) and (max-width: $breakpoint-desktop)"
    },
    {
      "name": "desktop",
      "media_query": "(min-width: $breakpoint-desktop + 0.1)"
    }
  ]
}
