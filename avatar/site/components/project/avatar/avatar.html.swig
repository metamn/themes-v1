<article class="avatar">
  <h3>Avatar</h3>

  <figure class="avatar__image">
    <img src="{{ site.url }}{{ site.images }}{{ avatar.image }}" alt="{{ avatar.name }}">
  </figure>

  <aside class="avatar__text">
    <h3 class="name">{{ avatar.name }}</h3>
    <p class="role">{{ avatar.role }}</h3>
  </aside>
</article>
